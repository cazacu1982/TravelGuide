    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>
</head>
<body>
<nav class="navbar navbar-inverse">
    <div class="container-fluid">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#myNavbar">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a class="navbar-brand" href="http://localhost:4200">TRAVELgUIDE</a>
        </div>
        <div class="collapse navbar-collapse" id="myNavbar">
            <ul class="nav navbar-nav">
                <li class="active"><a href="http://localhost:4200">Home</a></li>
                <li><a href="http://localhost:3000/dashboard">Dashboard</a></li>
                <li><a href="http://localhost:3000/users">Users</a></li>

            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li><a href="http://localhost:3000/logoutAdmin" class="btn btn-default btn-sm">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>
<!--edit-->
<div class="container">
    <div class="row">
        <!-- edit Profile-->
        <div class="col-sm-12">
            <div class="page-header text-center">
                <h1><span class="fa fa-anchor"></span> Edit Profile </h1>
            </div>
            <div class="well">

                <form method="post" action="/dashboard/profiles._id/edit" >
                    <div class="form-group">
                        <label>Name</label>
                        <input type="text" class="form-control" name="name" value="<%= profiles.name %>" >
                        <label>Country</label>
                        <input type="text" class="form-control" name="country" value="<%= profiles.country %>">
                        <label>Region</label>
                        <input type="text" class="form-control" name="region" value="<%= profiles.region %>">
                        <label>Date</label>
                        <input type="date" class="form-control" name="date" value="<%= profiles.date %>">
                        <label>Title</label>
                        <input type="text" class="form-control" name="title" value="<%= profiles.title %>">
                        <label>Comment</label>
                        <textarea class="form-control" rows="10" name="comment" placeholder="<%= profiles.comment %>"  ></textarea>
                        <!-- <label>File Upload</br>Select a file:</label>
                         <input id="label" type="file" name="img" multiple />
                         <span>MAX 8 FILES*</span>
                         <br />-->
                        <button type="submit" value ="Submit" class="btn btn-info btn-lg" style="margin-top: 1%">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

</body>
</html>